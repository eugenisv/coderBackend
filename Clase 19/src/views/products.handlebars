  <div>
    <h1>Bienvenid@ a Madera Viva, {{this.session.user.name}}</h1>
    <h2>Lista de productos</h2>
  </div>
  
   <div>
     <ul>
    {{#each this.response.payload}}
    <a href="http://localhost:8080/products/{{this._id}}">
      <li>
         <h2>{{this.title}}</h2>
      <p>{{this.description}}</p>
      <p>Precio: {{this.price}}</p>
      <button>Agregar al carrito</button>
      </li>
    </a>
    {{/each}}
  </ul>
   </div> 
   <div>
    {{#if this.hasPrevPage}}
    <a href="{{this.prevLink}}">Anterior</a>
    {{/if}}

    {{this.page}}
    {{#if this.hasNextPage}}
    <a href="{{this.nextLink}}">Siguiente</a>
    {{/if}}
   </div>
