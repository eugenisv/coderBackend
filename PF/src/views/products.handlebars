<div class="container">
  <div class="row header">
    <div class="col-md-12">
      <h1>Bienvenid@ a Madera Viva, {{this.session.user.name}}</h1>
      <h2>Lista de productos</h2>
    </div>
  </div>

  <div class="row products">
    <div class="col-md-12">
      <div class="row">
        {{#each this.response.payload}}
          <div class="col-md-3 col-sm-6 col-xs-12 product">
            <a href="http://localhost:8080/products/{{this._id}}" class="product-link">
              <div class="card">
                <img src="{{this.thumbnails}}" alt="{{this.title}}" class="card-img-top product-image">
                <div class="card-body">
                  <h5 class="card-title">{{this.title}}</h5>
                  <p class="card-text">{{this.description}}</p>
                  <p class="card-text">Precio: {{this.price}}</p>
                  <button class="btn btn-primary">Agregar al carrito</button>
                </div>
              </div>
            </a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="row pagination">
    <div class="col-md-12">
      {{#if this.response.hasPrevPage}}
        <a href="{{this.response.prevLink}}" class="btn btn-secondary">Anterior</a>
      {{/if}}

      <span class="current-page">Página {{this.response.page}}</span>

      {{#if this.response.hasNextPage}}
        <a href="{{this.response.nextLink}}" class="btn btn-secondary">Siguiente</a>
      {{/if}}
    </div>
  </div>

  <div class="row logout">
    <div class="col-md-12">
      <button id="btn-logout" class="btn btn-danger">Cerrar sesión</button>
    </div>
  </div>
</div>

<script src="/js/products.js"></script>

<style>
  /* Add additional styles here if needed */

  .header {
    padding-top: 20px;
    padding-bottom: 20px;
  }

  .products {
    margin-top: 20px;
  }

  .product-image {
    max-width: 100%;
    height: 300px;
    object-fit: cover;
    object-position: 50% 50%;
  }

  .product-details {
    padding-top: 10px;
  }

  .pagination {
    text-align: center;
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .logout {
    margin-top: 20px;
  }
</style>